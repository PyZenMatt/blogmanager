# Django Core Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
DJANGO_SETTINGS_MODULE=blog_manager.settings.dev
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_ENGINE=mysql
DB_NAME=blogmanager
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_HOST=127.0.0.1
DB_PORT=3306
CONN_MAX_AGE=60

# SQLite Configuration (alternative)
SQLITE_NAME=dev.sqlite3
SQLITE_TIMEOUT=20

# Security & CORS
CORS_ALLOWED_ORIGINS=http://localhost:4000,http://127.0.0.1:4000
CSRF_TRUSTED_ORIGINS=http://localhost:4000,http://127.0.0.1:4000

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=your-email@example.com

# External Services
CLOUDINARY_URL=cloudinary://your-cloudinary-url
GITHUB_TOKEN=your-github-token
BLOG_REPO_BASE=/path/to/blog/repos

# Production example (copy to .env for docker-compose reproduction)
# Uncomment and set these for a production-like local run with Docker Compose
# DJANGO_SETTINGS_MODULE=settings.prod
# SECRET_KEY=changeme
# DATABASE_URL=postgres://blog:blog@db:5432/blogmanager
# GIT_TOKEN=
# BLOG_REPO_BASE=/var/tmp/blog_exports

# Export Feature
EXPORT_ENABLED=True

# Production Only
ALLOW_SQLITE_IN_PROD=False