# Django Core Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
DJANGO_SETTINGS_MODULE=blog_manager.settings.dev
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_ENGINE=sqlite
DB_NAME=blogmanager
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_HOST=127.0.0.1
DB_PORT=3306
CONN_MAX_AGE=60

# SQLite Configuration (alternative)
SQLITE_NAME=dev.sqlite3
SQLITE_TIMEOUT=20

# Security & CORS
CORS_ALLOWED_ORIGINS=http://localhost:4000,http://127.0.0.1:4000
CSRF_TRUSTED_ORIGINS=http://localhost:4000,http://127.0.0.1:4000

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=your-email@example.com

# External Services
CLOUDINARY_URL=cloudinary://your-cloudinary-url
GITHUB_TOKEN=your-github-token
BLOG_REPO_BASE=/path/to/blog/repos

# GitHub Webhook (for Preview PR status updates)
# Secret used to validate webhook signatures from GitHub
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
GITHUB_WEBHOOK_SECRET=your-webhook-secret-here

# Preview PR Configuration (legacy - for preview sessions)
# Unified repository for all site previews
PREVIEW_REPO_OWNER=PyZenMatt
PREVIEW_REPO_NAME=blogmanager-previews
PREVIEW_BRANCH=main
PREVIEW_BASEDIR=sites
# Auto-generated: https://pyzenmatt.github.io/blogmanager-previews
# PREVIEW_BASE_URL=https://your-org.github.io/blogmanager-previews

# Unified Preview System (new - for direct post previews)
# Enable/disable unified preview functionality
PREVIEW_ENABLED=true
# Unified preview repository configuration (all sites share one repo)
BLOG_PREVIEW_REPO_OWNER=pyzenmatt
BLOG_PREVIEW_REPO_NAME=blogmanager-previews
BLOG_PREVIEW_BRANCH=gh-pages
# GitHub credentials for preview exports (uses GIT_TOKEN if GITHUB_TOKEN not set)
GIT_USERNAME=x-access-token

# Production example (copy to .env for docker-compose reproduction)
# Uncomment and set these for a production-like local run with Docker Compose
# DJANGO_SETTINGS_MODULE=settings.prod
# SECRET_KEY=changeme
# DATABASE_URL=postgres://blog:blog@db:5432/blogmanager
# GIT_TOKEN=
# BLOG_REPO_BASE=/var/tmp/blog_exports

# Export Feature
EXPORT_ENABLED=True

# Production Only
ALLOW_SQLITE_IN_PROD=False