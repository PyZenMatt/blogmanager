{
  // === Terminale utente ===
  "terminal.integrated.defaultProfile.linux": "blogmanager-venv",
  "terminal.integrated.profiles.linux": {
    "blogmanager-venv": {
      "path": "/bin/bash",
      "args": ["-l", "-c", "source /home/teo/.venvs/blogmanager/bin/activate; exec bash -l"]
    }
  },

  // === Terminale AUTOMATION (usato da agent, debug, test runner, ecc.) ===
  "terminal.integrated.automationProfile.linux": {
    "path": "/bin/bash",
    "args": ["-l", "-c", "source /home/teo/.venvs/blogmanager/bin/activate; exec bash -l"]
  },

  // === Ambiente forzato in ogni terminale (cintura & bretelle) ===
  "terminal.integrated.env.linux": {
    "VIRTUAL_ENV": "/home/teo/.venvs/blogmanager",
    "PATH": "/home/teo/.venvs/blogmanager/bin:${env:PATH}"
  },

  // === Python ===
  "python.defaultInterpreterPath": "/home/teo/.venvs/blogmanager/bin/python",
  "python.venvPath": "/home/teo/.venvs",
  "python.terminal.activateEnvironment": true,

  // === Terminale: eredita env, utile per agent ===
  "terminal.integrated.inheritEnv": true,

  // === Test Python ===
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  "python.testing.pytestPath": "/home/teo/.venvs/blogmanager/bin/pytest",

  // === Esclusioni watcher/ricerca ===
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.venv/**": true,
    "**/venv/**": true,
    "**/.pytest_cache/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.mypy_cache/**": true,
    "**/.ruff_cache/**": true,
    "**/.cache/**": true,
    "**/coverage/**": true,
    "**/.git/**": true
  },
  "search.exclude": {
    "**/node_modules/**": true,
    "**/.venv/**": true,
    "**/venv/**": true,
    "**/.pytest_cache/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.mypy_cache/**": true,
    "**/.ruff_cache/**": true,
    "**/.cache/**": true,
    "**/coverage/**": true,
    "**/.git/**": true
  }
}
