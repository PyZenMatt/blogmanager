{
  "terminal.integrated.defaultProfile.linux": "bash",

  // Usa l'interprete del venv nel workspace (senza spazi!)
  "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python",

  // Fa partire automaticamente il venv quando apri un nuovo terminale integrato
  "python.terminal.activateEnvironment": true,

  // Assicurati che il terminale erediti le variabili (utile su WSL/Copilot)
  "terminal.integrated.inheritEnv": true,

  // Forza bash come shell di login cos√¨ carica .bashrc (utile su WSL)
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "/bin/bash",
      "args": ["-l"]
    }
  },

  // Testing: punta al pytest del venv, non a /env/
  "python.testing.pytestEnabled": true,
  "python.testing.pytestPath": "${workspaceFolder}/venv/bin/pytest",
  "python.testing.unittestEnabled": false,
  "python.testing.autoTestDiscoverOnSaveEnabled": true
}
